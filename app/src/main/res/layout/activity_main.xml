<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@drawable/waback">

    <EditText
            android:layout_width="300dp"
            android:layout_height="59dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.144" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:layout_width="62dp"
            android:layout_height="51dp" android:id="@+id/button"
            android:stateListAnimator="@android:anim/anticipate_overshoot_interpolator"
            android:background="@drawable/round_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@+id/editText3" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.222" android:autoText="false"
            android:hapticFeedbackEnabled="true"
            app:layout_constraintBottom_toBottomOf="@+id/editText3" app:layout_constraintTop_toTopOf="@+id/editText3"/>
    <ImageView
            android:layout_width="15dp"
            android:layout_height="21dp" app:srcCompat="@drawable/ic_sentiment_satisfied_black_24dp"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/editText3" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/editText3" app:layout_constraintBottom_toBottomOf="@+id/editText3"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_camera_alt_black_24dp"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/editText3" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/editText3" app:layout_constraintEnd_toEndOf="@+id/editText3"
            android:layout_marginEnd="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>